@model Auttar.Application.ViewModels.ConsultaPixViewModel
<div class="row justify-content-center">
    <div class="col-xl-5 col-lg-6 col-md-7">
        <div class="text-center">
            <h1 class="h2">Auttar - WebSocket</h1>
            <p class="lead">Consulta venda PIX</p>
            <form asp-controller="PinPad" asp-action="ConsultaVendaPix" method="post">
                <div class="form-group">
                    <label>Operação</label>
                    <input class="form-control" placeholder="Operacao" name="operacao" value="@Html.Raw(Model.operacao)" />
                </div>
                <div class="form-group">
                    <label>NSU</label>
                    <input class="form-control" placeholder="NSU" name="nsuCTF" value="@Html.Raw(Model.nsuCTF)" />
                </div>    
                <div class="form-group">
                    <label>Valor</label>
                    <input class="form-control" placeholder="Valor" name="valorTransacao" value="@Html.Raw(Model.valorTransacao)" />
                </div>               
                <button class="btn btn-lg btn-block btn-primary" type="submit">Consulta</button>
            </form>
            <div class="card card-note">
                <label>Resposta</label>
                <div class="card-body">
                    @Model.resposta
                </div>
            </div>
        </div>
    </div>
</div>
